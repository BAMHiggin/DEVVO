<div class="container">
  <div class="row">

    <div class="col-12 my-3">
      <h2> This Week's Tasks {{currentWeekDay}}</h2>

    </div>
    {{#each userTasks}}
    <div class="col-md-9 col-sm-12">
      <div class="row">
        <div class="col-md-4 col-sm-12 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{Task.title}}</h5>
              <div class="card-text">{{Task.text}}</div>
              <div class="text-center">
                <button class="btn btn-danger mt-4">Complete</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
     {{/each}}

{{!-- flex-row-reverse will hold progress bar on the rightmost column when above handlebars populates cards --}}
    <div class="col-md-3 col-sm-12 flex-row-reverse">
      <div class="row">
        <div class="col-md-12 col-sm-12 mb-12 ">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title mt-3">Task Progress</h5>
              <div class="progress">
                <div id="dynamic" class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar"
                  aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
              
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
   


  </div>
</div>
</div>

<script src="/js/tasks.js"></script>