<!--Adding tasks specific stylesheet-->
<link rel="stylesheet" href="/styles/taskStyles.css" media="screen" title="no title" charset="utf-8">

<div class="container">
  <div class="row">

    <div class="col-12 my-3">
      <h2 class="text-white font-weight-bold"> This Week's Tasks {{currentWeekDay}}</h2>

    </div>

    <div class="col-sm-12 col-md-9 order-2 order-sm-2 order-md-1">
      <div class="row">
        {{#each UserTasks}}
        {{#unless completed}}
        <div class="col-md-4 col-sm-12 mb-3" id="userTaskCard{{id}}">
          <div class="card taskCard">
            <div class="card-header bg-dark text-white">
              <h5 class="card-title">{{Task.title}}</h5>
            </div>
            <div class="card-body">
              <div class="card-text mb-3">{{Task.text}}</div>
              <div class="card-text">{{{Task.links}}}</div>
            </div>
            <div class="card-footer text-center">
              <button data-id="{{id}}" data-associated-card="userTaskCard{{id}}" class="btn btn-warning btn-block hvr-pulse-grow mt-4 complete">Complete</button>
            </div>
          </div>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-sm-12 col-md-3 order-1 order-sm-1 order-md-2 mb-3">
      <div class="row">
        <div class="col-md-12 col-sm-12 mb-12 float-right">

          <div class="card" id="progressCard">
            <div class="card-body text-center" id="progressCardBody">
              <h3 class="card-title" id="taskProgressTitle">Task Progress</h3>
              <div class="ldBar label-center" data-type="fill" data-fill-background="white" data-img-size="100,100" data-img="/img/AreWeNotCutouts.png" data-fill-dir="btt"
                data-fill-background="#9df">
            

            </div>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
</div>

<script src="/js/tasks.js"></script>