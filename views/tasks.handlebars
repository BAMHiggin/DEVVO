<div class="container">
  <div class="row">

    <div class="col-12 my-3">
      <h2> This Week's Tasks {{currentWeekDay}}</h2>

    </div>

    <div class="col-sm-12 col-md-9">
      <div class="row">
        {{#each UserTasks}}
        <div class="col-md-4 col-sm-12 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{Task.title}}</h5>
              <div class="card-text">{{Task.text}}</div>
              <div class="text-center">
                <button data-id={{id}}  class="btn btn-danger mt-4 complete">Complete</button>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <div class="col-sm-12 col-md-3">
      <div class="row">
        <div class="col-md-12 col-sm-12 mb-12 float-right">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title mt-3">Task Progress</h5>
              <div class="progress">
                <div id="dynamic" class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar"
                  aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
</div>

<script src="/js/tasks.js"></script>