<header class="jumbotron bg-secondary text-center devvoHeader">
  <h1 class="display-3 devvoHeading">Devvo</h1>
  <hr>
  <h2 class="mb-4">Whip your coding interview. Whip it good.</h2>
</header>

<main id="home">
  <div class="container">
    <div class="row">
      <div class="col-sm-0 col-md-3"></div>
      <div class="col-sm-12 col-md-6">
        <form class="needs-validation homeForm" novalidate>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Select your coding skill level that you will be interviewing for:</label>
            <select class="form-control" id="skillLevel" name="skillLevel" required>
              <option>Beginner</option>
              <option>Intermediate</option>
              <option>Expert</option>
            </select>
            <div class="invalid-feedback">
              Please enter a your coding skill level.
            </div>
          </div>
          <button type="submit" class="btn btn-warning">Submit</button>
        </form>
      </div>
    </div>
  </div>
</main>

<script src="/js/skillLevel.js"></script>